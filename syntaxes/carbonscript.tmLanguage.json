{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "carbonscript",
  "patterns": [
    {
      "include": "#keywords"
    },
	{
		"include": "#comment"
	},
    {
      "include": "#double_quoted_strings"
    },
    {
      "include": "#single_quoted_strings"
    },
    {
      "include": "#data_type"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.carbonscript",
          "match": "\\b(if|switch|do|while|for|goto|break|return|set|const)\\b"
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line",
          "match": "#\\$"
        }
      ]
    },
    "data_type": {
      "patterns": [
        {
          "name": "entity.name.type",
          "match": "\\b(boolean|number|string|null)\\b"
        }
      ]
    },
    "double_quoted_strings": {
      "name": "string.quoted.double.carbonscript",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.carbonscript",
          "match": "\\\\."
        }
      ]
    },
    "single_quoted_strings": {
      "name": "string.quoted.single",
      "begin": "\\'",
      "end": "\\'",
      "patterns": [
        {
          "name": "constant.character.escape.carbonscript",
          "match": "\\\\."
        }
      ]
    }
  },
  "scopeName": "source.carbonscript"
}
